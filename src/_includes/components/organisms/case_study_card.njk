{% macro caseStudyCard(imageUrl, title, description, tags, url) %}
<div class="bg-white rounded-lg shadow-lg overflow-hidden transform hover:-translate-y-2 transition-transform duration-300">
    <a href="{{ url }}" class="block">
        <img src="{{ imageUrl }}" alt="{{ title }}の画像" class="w-full h-48 object-cover">
        <div class="p-6">
            <h3 class="text-xl font-bold mb-2 font-sans">{{ title }}</h3>
            <p class="text-gray-600 mb-4">{{ description }}</p>
            <div class="flex flex-wrap gap-2">
                {% for tag in tags %}
                    <span class="bg-gray-200 text-gray-700 text-sm font-semibold px-2 py-1 rounded-full">{{ tag }}</span>
                {% endfor %}
            </div>
        </div>
    </a>
</div>
{% endmacro %}
