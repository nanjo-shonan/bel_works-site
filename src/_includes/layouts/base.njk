{# src/_includes/layouts/base.njk #}
<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }} | bel_works</title>
    
    {# ViteがJS経由でCSSをここに注入します #}
    {% viteScript "src/assets/js/main-vite.js" %}
    
    {# 各ページ固有のmetaタグなどを挿入するためのブロック #}
    <meta name="description" content="{{ description or metadata.description }}">
</head>
<body>
    {# ヘッダーをインクルード #}
    {% include "components/organisms/header.njk" %}

    <main>
        {# 各ページの内容がここに挿入される #}
        {{ content | safe }}
    </main>

    {# フッターをインクルード #}
    {% include "components/organisms/footer.njk" %}

    {# 既存のJSファイルはBabelで処理して読み込む #}
    {% viteBabelScript "src/assets/js/main.js" %}
</body>
</html>
