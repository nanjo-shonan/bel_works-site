{# src/_includes/layouts/base.njk #}
<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }} | bel_works</title>
    
    {# --- ↓↓↓ 既存のlinkタグをすべて削除し、このVite用ショートコードに置き換え ↓↓↓ --- #}
    {% viteCss "src/assets/css/main.css" %}
    
    {# 各ページ固有のmetaタグなどを挿入するためのブロック #}
    <meta name="description" content="{{ description or metadata.description }}">
</head>
<body>
    {# ヘッダーをインクルード #}
    {% include "components/organisms/header.njk" %}

    <main>
        {# 各ページの内容がここに挿入される #}
        {{ content | safe }}
    </main>

    {# フッターをインクルード #}
    {% include "components/organisms/footer.njk" %}

    {# 共通のJavaScriptファイルを読み込む #}
    <script src="/assets/js/main.js" defer></script>
</body>
</html>
