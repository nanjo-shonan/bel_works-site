{# src/_includes/layouts/base.njk #}
<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }} | bel_works</title>
    
    {# グローバルCSSファイルを読み込む #}
    <link rel="stylesheet" href="/assets/css/global.css">
    
    {# 各ページ固有のmetaタグなどを挿入するためのブロック #}
    <meta name="description" content="{{ description or metadata.description }}">
</head>
<body>
    {# ヘッダーなどの共通コンポーネントをインクルード（パスは現状に合わせて調整が必要な場合があります） #}
    {% include "components/organisms/header.njk" %}

    <main>
        {# 各ページの内容がここに挿入される #}
        {{ content | safe }}
    </main>

    {# フッターなどの共通コンポーネントをインクルード（パスは現状に合わせて調整が必要な場合があります） #}
    {% include "components/organisms/footer.njk" %}

    {# 共通のJavaScriptファイルを読み込む #}
    <script src="/assets/js/main.js" defer></script>
</body>
</html>
