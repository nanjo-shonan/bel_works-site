    <meta property="og:url" content="{{ site.url }}{{ page.url }}">
    <meta property="og:image" content="{{ site.url }}/images/common/ogp-default.png">
    <meta property="og:site_name" content="ベルワークス">
    <meta name="twitter:card" content="summary_large_image">

    <!-- =================================================
